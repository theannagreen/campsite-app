<!--localhost:3000/campsites page -->
<%- include('../partials/header') %>
    <% console.log(campsites); %>
        <table id="list">
            <thead>
                <tr>
                    <th>Campsite</th>
                    <th>Location</th>
                    <th>Description</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% campsites.forEach(function(c) { %>
                    <tr>
                        <td>
                            <%= c.campsite %>
                        </td>
                        <td>
                            <%= c.location %>
                        </td>
                        <td>
                            <%= c.description %>
                        </td>
                        <td><a href="/campsites/<%= c._id %>">Details</a></td>
                        <td><a href="/campsites/edit/<%= c._id %>">Edit</a></td>
                        <td>
                            <form method="POST" action="/campsites/<%= c._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this campsite?')">
                                <button type="submit">Delete</button>
                            </form>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <%- include('../partials/footer') %>